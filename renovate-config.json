{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:earlyMondays",
    "group:all"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "timezone": "America/New_York",
  "packageRules": [
    {
      "description": "Don't bump engines field in package.json",
      "matchPackageNames": ["node"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines"],
      "rangeStrategy": "auto"
    }
  ]
}
